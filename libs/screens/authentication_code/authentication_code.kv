#_0tools_style_path
#_0tools_style_path
#start_import
<AuthenticationCode>
    #start_ObjectProperty
    name : 'auth_code'
    MDIconButton:
        icon : "arrow-left"
        pos_hint : {'center_y' : .94, 'center_x' : .09}
        on_press:
            app.root.current = 'login'
    MDLabel
        text : "[size=16][b]Enter your authentication code[/b][/size]\n[size=12]enter your code to login in mizdezh market[/size]"
        halign : "center"
        pos_hint : {'center_y' : .83}
        theme_text_color : "Custom"
        markup : True
        text_color : [0,0,0,.6]
        size_hint_x : None
        size_hint_x : .9

    MDTextField:
        id : code
        size_hint_x : .9
        pos_hint : {'center_x' : .5, 'center_y' : .7}
        mode: "fill"
        radius : [15,]
        input_filter : "int"
        active_line : False
        hint_text_color_focus : 0,0,0,0
        hint_text : "Enter your code" if not self.focus else ""
        helper_text_mode: "persistent"
        helper_text : "enter your code"
        on_text:
        halign : "center"

    MDRoundFlatButton:
        text : "Confirm"
        pos_hint : {'center_x' : .5, 'center_y' : .1}
        line_color : [0,0,0,0]
        md_bg_color : app.theme_cls.primary_palette.lower() if len(code.text) == 5 else "gray"
        size_hint_x : None
        size_hint_x : .9
        theme_text_color : "Custom"
        text_color : "black"
        on_press:
            app.root.current = 'wellcome'