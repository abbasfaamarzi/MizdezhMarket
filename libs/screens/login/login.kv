#_0tools_style_path

#start_import
<Login>
    #start_ObjectProperty
    name : 'login'
    MDIconButton:
        icon : "dots-vertical"
        pos_hint : {'center_y' : .94, 'center_x' : .91}
    MDIconButton:
        icon : "close"
        pos_hint : {'center_y' : .94, 'center_x' : .09}

    MDLabel:
        size_hint_x : None
        size_hint_x : .8
        text : "[size=30]Mizdezh [b]Market[/b][/size]"
        markup : True

        pos_hint : {'center_x' : .5, 'center_y' : .8}
        halign : "center"
        valign : "center"
        theme_text_color : "Custom"
        #text_color : app.theme_cls.primary_palette.lower()
    MDTextField:
        id : phone_number
        size_hint_x : .9
        pos_hint : {'center_x' : .5, 'center_y' : .55}
        mode: "fill"
        radius : [15,]
        input_filter : "int"
        active_line : False
        hint_text_color_focus : 0,0,0,0
        hint_text : "Enter your phon number" if not self.focus else ""
        helper_text_mode: "persistent"
        helper_text : "enter your phone number"
        on_text:
            root.check_phone(self.text)
    MDRoundFlatButton:
        text : "login"
        pos_hint : {'center_x' : .5, 'center_y' : .25}
        line_color : [0,0,0,0]
        md_bg_color : app.theme_cls.primary_palette.lower()
        size_hint_x : None
        size_hint_x : .9
        theme_text_color : "Custom"
        text_color : "black"
        on_press:
            app.root.current = 'auth_code'
    MDBoxLayout:
        size_hint_y : None
        size_hint_y : .2
        pos_hint : {'center_y' : .09}
        md_bg_color : [0,0,0,.015]
        MDLabel:
            text : "Copy right 2023"
            halign : "center"
            valign : "center"
            theme_text_color : "Custom"
            text_color : [0,0,0,.3]
            font_size : 10